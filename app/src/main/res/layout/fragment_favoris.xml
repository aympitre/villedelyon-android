<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="air.com.c2is.villedelyon.FragmentFavoris">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/rouge"
        android:gravity="left">

        <LinearLayout
            android:paddingTop   ="0dp"
            android:paddingLeft  ="10dp"
            android:paddingRight ="10dp"
            android:orientation  ="vertical"
            android:layout_width ="match_parent"
            android:layout_height="match_parent"
            android:background   ="@color/grisnoir"
            android:gravity      ="left">

            <TextView
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:textColor="@color/blanc"
                android:text="@string/titreFavoris"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titreFavoris" />


                <TextView
                    android:id="@+id/myAucunTexte"
                    android:text="@string/libVide"
                    android:textColor="@color/blanc"
                    android:background="@color/grisnoir"
                    android:visibility="visible"
                    android:paddingTop="20dp"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <ListView
                android:id="@+id/mylistview"
                android:background="@color/grisnoir"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dp"
                />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
