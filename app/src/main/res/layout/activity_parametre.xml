<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="air.com.c2is.villedelyon.Parametre">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/rouge"
            android:gravity="left">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/rouge"
                android:gravity="left">

                <include layout="@layout/header"/>
            </LinearLayout>

            <LinearLayout
                android:paddingTop   ="10dp"
                android:paddingLeft  ="10dp"
                android:paddingRight ="10dp"
                android:orientation  ="vertical"
                android:layout_width ="match_parent"
                android:layout_height="match_parent"
                android:background   ="@color/grisnoir"
                android:gravity      ="left">

                <Switch
                    android:textColor="@color/blanc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paramGeoloc"
                    android:id="@+id/switchGeoloc" />

                <TextView
                    android:paddingTop="20dp"
                    android:textColor="@color/blanc"
                    android:text="@string/paramMention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/titreMention" />

                <WebView
                    android:id="@+id/texte"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:background="@color/transparent"
                    android:textStyle="normal"
                    android:textColor="@color/noir"
                    android:scrollbars="vertical"
                    tools:ignore="WebViewLayout"></WebView>

            </LinearLayout>

        </LinearLayout>
</RelativeLayout>
