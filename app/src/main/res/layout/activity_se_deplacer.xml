<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="air.com.c2is.villedelyon.SeDeplacer">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="left">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/rouge"
        android:gravity="left">

        <include layout="@layout/header"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/bouton_gris"
        android:gravity="left">

        <TextView android:id="@+id/titre"
            android:textColor="@color/blanc"
            android:text="@string/libHomeBt4"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textAllCaps="true"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bouton_gris"
                android:gravity="right">

                <ImageButton
                    android:id="@+id/bt_menu"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:src="@drawable/bouton_home" />

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanc"
        android:gravity="top|center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanc"
            android:gravity="top|center_horizontal">

            <Button
                android:id="@+id/bt_menu1"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/rouge"
                android:background="@drawable/menu"
                android:textAlignment="center"
                android:gravity="center"
                android:text="@string/libMenu4_1"
                android:textSize="12sp"
                android:textAllCaps="true"/>

            <Button
                android:id="@+id/bt_menu2"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/rouge"
                android:background="@drawable/menu"
                android:textAlignment="center"
                android:gravity="center"
                android:text="@string/libMenu4_2"
                android:textSize="12sp"
                android:textAllCaps="true"/>

            <Button
                android:id="@+id/bt_menu3"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/rouge"
                android:background="@drawable/menu"
                android:textAlignment="center"
                android:gravity="center"
                android:text="@string/libMenu4_3"
                android:textSize="12sp"
                android:textAllCaps="true"/>

        </LinearLayout>
    </LinearLayout>


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map"
        tools:context=".SeDeplacer"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

        <ImageButton
            android:id="@+id/btLegende"
            android:layout_gravity="right"
            android:layout_marginTop="-100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/legende"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layMenuPicto"
            android:gravity="left|center_vertical"
            android:layout_marginTop="-290dp"
            android:background="@drawable/fond_grand_normal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layFondMenu"
                android:layout_marginTop="0dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btPicto1"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:paddingLeft="15dp"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_tramway_on"/>

                <ImageButton
                    android:id="@+id/btPicto2"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:paddingLeft="15dp"

                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_metro_off"/>

                <ImageButton
                    android:id="@+id/btPicto3"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:paddingLeft="15dp"

                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_taxi_off"/>

                <ImageButton
                    android:id="@+id/btPicto4"
                    android:background="@color/transparent"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:paddingLeft="15dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picto_train_off"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btMenuLayer"
                    android:paddingRight="5dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="80dp"
                    android:layout_marginTop="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:src="@drawable/double_barre"/>
            </LinearLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btMenuLayerPetit"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:layout_marginTop="-140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fond_petit"
            android:src="@drawable/double_barre"/>

        <RelativeLayout
            android:id="@+id/layLegende"
            android:orientation="vertical"
            android:layout_marginTop="-200dp"
            android:visibility="gone"
            android:background="@color/fondlegende"
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <ImageButton
                android:id="@+id/btClose"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                android:paddingBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/bt_femer"/>

            <WebView
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:background="@color/transparent"
                android:textStyle="normal"
                android:textColor="@color/grisnoir"
                tools:ignore="WebViewLayout"
                ></WebView>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
